<div class="container" style="height:  width:60%" >
  <h1><%= @market.name %></h1>
  <p><%= @market.category.name %></p>
  <p><%= @market.address%></p>
  <p><%= @market.description%></p>

</div>

<div style="width: 100%; height: 600px;">
  data-controller="map"
  data-map-markers-value="<%= @marker.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"</div>


<div>
    <%= link_to market_reviews_path(@market) , class: "nav-link" do %>
      Check the reviews
    <%end%>
  </div>

  <div>
    <%= link_to new_market_review_path(@market) , class: "nav-link" do %>
      Leave a Review
    <%end%>
  </div>
