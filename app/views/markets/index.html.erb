  <% @markets.each do |market| %>
  <div class="marketcard">
    <div class="marketimage">
       <%= image_tag(market.image_url) %>
        <h5> <%= market.name %></h5>
        <p> <%= market.description %></p>
        <p> <%= market.address %></p>
      <%= link_to "directions", "https://maps.google.com/maps?q=#{market.address}" %>
      </div>
  </div>

  <div>
    <%= link_to market_reviews_path(market.id) , class: "nav-link" do %>
      Check the reviews
    <%end%>
  </div>

  <div>
    <%= link_to new_market_review_path(market.id) , class: "nav-link" do %>
      Leave a Review
    <%end%>
  </div>
  <% end %>
